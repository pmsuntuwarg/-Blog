@model Blog.Areas.Admin.ViewModels.CommentViewModel

<form asp-controller="Comment" asp-action="Create">
    <input asp-for="PostId" hidden />
    <div class="form-group">
        <textarea asp-for="Content" class="form-control" rows="5" placeholder="Comment here"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">SUBMIT</button>
    </div>
</form>